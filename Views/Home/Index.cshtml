@model order_project.Models.Order

@{
    ViewData["Title"] = "Order Page";

    Layout = "~/Views/Shared/_Layout.cshtml";


}
@if (TempData["Message"] != null)
{
    <div class="alert alert-@(TempData["MessageType"])" role="alert">
        @TempData["Message"]
    </div>
}

<div class="row-cols-2">
    <form asp-action="Save" method="post">
        <div class="form-group row">
            <div class="col-sm-1">
                <h6 class="mb-0">Customer<sup style="color:red">*</sup></h6>
            </div>
            <div class="col-sm-3">
                @Html.DropDownListFor(m => m.CustomerId, ViewBag.CustomerList as SelectList, new { @class = "form-select" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1">
                <h6 class="mb-0">Product<sup style="color:red">*</sup></h6>
            </div>
            <div class="col-sm-3">
                @Html.DropDownListFor(m => m.ProductId, ViewBag.ProductList as SelectList, new { @class = "form-select" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1">
                <label class="col-form-label">Quantity
                    <h6 class="mb-0">Product<sup style="color:red">*</sup></h6>
            </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" asp-for="Quantity">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </form>
</div>
<div class="row">
<table id="example" class="table table-striped table-bordered" style="width:100% ;text-align:center">
            <thead class="table-secondary">
                <tr>
                    <th style="display:none">Id</th>
                    <th>Sl</th>
                    <th>Customer Name</th>
                    <th>Product Name</th>
                   @*  <th>Order Description</th> *@
                    <th>Order Amount</th>
                   

                </tr>
            </thead>

            <tbody>
            @foreach (Order AC in ViewBag.OrderDetails)
                {
                    <tr>

                        <td style="display:none">@AC.Id</td>
                        <td>@AC.Sl</td>
                        <td>@AC.CustomerName</td>
                        <td>@AC.ProductName</td>
                        @* <td>@AC.OrderDesc</td> *@
                        <td>@AC.OrderAmount</td>


                                                
                    </tr>
                }
            </tbody>
        </table>

  </div>
